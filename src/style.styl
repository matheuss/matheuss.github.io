html, body
  margin: 0
  width: 100%
  height: 100%

body, .container
  font-family: 'Dosis', sans-serif
  color: slategray

.flex-vertical
  margin: 0 auto
  max-width: 1280px
  width: 90%
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  height: 100%

.icons
	display: flex
	flex-wrap: nowrap
	justify-content: space-between

@media only screen and (max-width: 991px)
	#name
		font-size: 11vw
	.icons
		width: 79vw

@media only screen and (min-width: 992px)
	#name
		font-size: 5em
	.icons
		width: 90%
		max-width: 36em
a > i
	transition: color .3s

colors = #333333 #1da1f2 #e91e63 #0099e5 #0077b5 #00ab6c
for color, i in colors
  a:nth-child({i + 1}):hover
    color: color

#emoji
  position: relative
  top: 40px
  background-image: url('emojis.png')
  display: inline-block
  width: 200px
  height: 230px
  background-size: 6000px
  background-repeat: no-repeat
  background-position: -2000px, 0
#four_oh_four
  font-size: 13em
a
  color: slategray
